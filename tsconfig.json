{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vuetify"],
    "baseUrl": "./src/",
    "paths": {
      "@/assets": ["./assets"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/layouts/*": ["./layouts/*"],
      "@/store": ["./store"],
      "@/store/*": ["./store/*"],
      "@/models": ["./models"],
      "@/models/*": ["./models/*"],
      "@/router": ["./router"],
      "@/router/*": ["./router/*"],
      "@/config": ["./config"],
      "@/config/*": ["./config/*"],
      "@/services": ["./services"],
      "@/services/*": ["./services/*"],
      "@/composables": ["./composables"],
      "@/composables/*": ["./composables/*"],
      "@/plugins/*": ["./plugins/*"],
      "@/plugins": ["./plugins"],
      "@/utils": ["./utils"],
      "@/utils/*": ["./utils/*"],
      "@/views": ["./views"],
      "@/views/*": ["./views/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ]
}
